{% extends 'item.njk' %}
{% import 'components/item.njk' as item %}
{% from 'components/book.njk' import review %}

{% block header %}
{{item.header(type='post', title=title, subtitle=subtitle)}}
{% endblock header %}

{% block content %}
{%- if series -%}
<div class='callout'>
   {% set part %}
      {% if series.part == 0 %}
         the introduction to
      {% else %}
         Part {{series.part}} in
      {% endif %}
   {% endset %}

   This post is {{part}} the series
      “{{series.title}}”
   {%- endif -%}
   .
   {% if series.link %}
      You’ll find the rest of the series <a href="{{series.link}}">here</a>!
   {% endif %}
</div>
{%- endif -%}


{% if qualifiers -%}
<div class='qualifiers'>
   {% if qualifiers.audience -%}
   <p>
      <b><a href='https://v4.chriskrycho.com/2018/assumed-audiences.html'>Assumed Audience</a>:</b>
      {{qualifiers.audience | inlineMd | safe}}
   </p>
   {%- endif %}
   {% if qualifiers.epistemic %}
   <p>
      <b><a href='https://v5.chriskrycho.com/journal/epistemic-status/'>Epistemic Status</a>:</b>
      {{qualifiers.epistemic | inlineMd | safe}}
   </p>
   {% endif %}
</div>
{%- endif %}

{%- if book.review -%}
   {{- review(book) -}}
{%- endif -%}
   {{- super() -}}
{% endblock %}

{% block after_content %}
   {{item.meta(title, page.date, tags, updated, page.inputPath, thanks)}}
{% endblock %}